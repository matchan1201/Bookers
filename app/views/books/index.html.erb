<div class="container">
  <div class="row">
  	<div class="col-xs-3">
  	  <h2>User info</h2>
  	  <table class="table">
  	  	<tbody>
  	  	  <tr></tr>
  	  	  <tr>
  	  	  	<th>name</th>
  	  	  </tr>
  	  	  <tr>
  	  	  	<th>introduction</th>
  	  	  </tr>
  	  	</tbody>
  	  </table>
  	  <div class="row">
  	  	<%= link_to '#', books_path, class: "btn btn-default col-xs-12" %>
  	  </div>
  	  <h2>New book</h2>
  	    <%= form_for(@book) do |f| %>
        <div class="field row">
          <%= f.label :title, "Title"%>
          <br>
          <input type="text" class="col-xs-12" id="title">
        </div>

        <div class="field row">
          <%= f.label :body, "Opinion" %>
          <br>
          <textarea class="col-xs-12" id="body"></textarea>
        </div>

        <div class="actions row">
  	      <%= f.submit(class: 'btn btn-primary col-xs-12') %>
        </div>
        <% end %>
  	</div>

  	<div class="col-xs-9">
  	  <h2>Books</h2>
  	  <table class="table table-hover">
  	  	<thead>
  	  		<tr>
  	  		  <th></th>
  	  		  <th>Title</th>
  	  		  <th>Opinion</th>
  	  		  <th colspan="3"></th>
  	  		</tr>
  	  	</thead>
  	  	<tbody>
  	    <% @books.each do |book| %>
  	      <tr>
  	      	<td><%= link_to '#', books_path %></td>
  	  	    <td><%= book.title %></td>
  	  	    <td><%= book.body %></td>
  	      </tr>
  	    <% end %>
      </tbody>
    </table>
  	</div>
  </div>
</div>

