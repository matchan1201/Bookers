<div class="container">
  <div class="row">
  	<div class="col-xs-3">
  	  <h2>User info</h2>
  	  <table class="table">
  	  	<tbody>
  	  	  <tr></tr>
  	  	  <tr>
  	  	  	<th>name</th>
  	  	  </tr>
  	  	  <tr>
  	  	  	<th>introduction</th>
  	  	  </tr>
  	  	</tbody>
  	  </table>
  	  <div class="row">
        <% if @user.id == current_user.id %>
  	  	<%= link_to '#', edit_user_path(@user), class: "btn btn-default col-xs-12" %>
        <% end %>
  	  </div>
  	  <h2>New book</h2>
  	    <%= form_for(@book) do |f| %>
        <div class="field row">
          <%= f.label :title, "Title"%>
          <br>
          <%= f.text_field :title, class: "col-xs-12" %>
        </div>

        <div class="field row">
          <%= f.label :body, "Opinion" %>
          <br>
          <%= f.text_area :body, class: "col-xs-12" %>
        </div>

        <div class="actions row">
  	      <%= f.submit(class: 'btn btn-primary col-xs-12') %>
        </div>
        <% end %>
  	</div>

  	<div class="col-xs-9">
  	  <h2>Book detail</h2>
  	  <table class="table table-hover">
  	  	<thead>
  	  		<tr>
  	  		  <th></th>
  	  		  <th>Title</th>
  	  		  <th>Opinion</th>
  	  		  <th colspan="3"></th>
  	  		</tr>
  	  	</thead>
  	  	<tbody>
  	    
  	      <tr>
  	      	<td><%= link_to '#', books_path %></td>
  	  	    <td><%= @book.title %></td>
  	  	    <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
            <% end %>
            <% if @book.user == current_user %>
            <td><%= link_to 'Destroy', book_path(@book), class: "btn btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
  	      </tr>
  	   
      </tbody>
    </table>
  	</div>
  </div>
</div>

