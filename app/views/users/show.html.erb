<div class="container">
  <p id="notice"></p>
  <div class="row">
  	<div class="col-xs-3">
  	  <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
      <br>
  	  <table class="table">
  	  	<tbody>
  	  	  <tr></tr>
  	  	  <tr>
  	  	  	<th>name</th>
            <th><%= @user.name %></th>
  	  	  </tr>
  	  	  <tr>
  	  	  	<th>introduction</th>
            <th><%= @user.introduction %></th>
  	  	  </tr>
  	  	</tbody>
  	  </table>
  	  <div class="row">
        <% if @user.id == current_user.id %>
  	  	<%= link_to edit_user_path(@user) do %>
        <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></span>
        <% end %>
        <% end %>
  	  </div>
  	  <h2>New book</h2>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2>
               <%= pluralize(@book.errors.count, 'error') %> prohibited this book from being saved:
            </h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
  	    <%= form_for(@book) do |f| %>
        <div class="field row">
          <%= f.label :title, "Title"%>
          <br>
          <%= f.text_field :title, class: "col-xs-12" %>
        </div>

        <div class="field row">
          <%= f.label :body, "Opinion" %>
          <br>
          <%= f.text_area :body, class: "col-xs-12" %>
        </div>

        <div class="actions row">
  	      <%= f.submit(class: 'btn btn-primary col-xs-12') %>
        </div>
        <% end %>
  	</div>

  	<div class="col-xs-9">
  	  <h2>Books</h2>
  	  <table class="table table-hover">
  	  	<thead>
  	  		<tr>
  	  		  <th></th>
  	  		  <th>Title</th>
  	  		  <th>Opinion</th>
  	  		  <th colspan="3"></th>
  	  		</tr>
  	  	</thead>
  	  	<tbody>
  	    <% @books.each do |book| %>
  	      <tr>
  	      	<td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %></td>
  	  	    <td><%= book.title %></td>
  	  	    <td><%= book.body %></td>
  	      </tr>
  	    <% end %>
      </tbody>
    </table>
  	</div>
  </div>
</div>

